<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.expreg.p8_program.MainActivity"
    tools:showIn="@layout/activity_main">

    <!--
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No location yet"
        android:id="@+id/location_text" />
    -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accelerometer x-axis: \nAccelerometer y-axis: \nAccelerometer z-axis:"
        android:id="@+id/accelerometer_text" />

    <!--
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/accelerometer_text"
        android:text="Magnetometer"
        android:id="@+id/magnetometer_text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/magnetometer_text"
        android:text="Gyroscope"
        android:id="@+id/gyroscope_text" />
    -->

    <EditText android:id="@+id/freq_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_below="@+id/accelerometer_text"
        android:hint="@string/freq_message" />

    <TableLayout android:id="@+id/button_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/freq_message">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Trip"
                android:onClick="startTrip"
                android:layout_weight="0.5"
                android:id="@+id/startTripButton" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop Trip"
                android:onClick="stopTrip"
                android:layout_weight="0.5"
                android:id="@+id/stopTripButton" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Calibration"
                android:onClick="startCalibration"
                android:layout_weight="0.5"
                android:id="@+id/startCalibrationButton" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop Calibration"
                android:onClick="stopCalibration"
                android:layout_weight="0.5"
                android:id="@+id/stopCalibrationButton" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Export"
                android:onClick="export"
                android:layout_weight="0.5"
                android:id="@+id/exportButton" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete DB"
                android:onClick="deleteDB"
                android:layout_weight="0.5"
                android:id="@+id/deleteButton" />
        </TableRow>
    </TableLayout>

    <SurfaceView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/color_box"
        android:background="#00FF00"
        android:layout_below="@+id/button_table"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
